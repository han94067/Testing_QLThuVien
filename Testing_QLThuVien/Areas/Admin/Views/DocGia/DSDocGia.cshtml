@model IEnumerable<Testing_QLThuVien.Models.DocGia>

@{
    ViewBag.Title = "DSDocGia";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    int stt = 1;
}


<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">

            <div class="x_title">
                <h2>Danh Sách Độc Giả</h2>
                <div class="nav navbar-right panel_toolbox">
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target=".bs-example-modal-lg">Thêm Độc Giả</button>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <table id="mytable" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Tên Độc Giả</th>
                            <th>Địa Chỉ</th>
                            <th>Ngày Sinh</th>
                            <th>SDT</th>
                            <th>Email</th>
                            <th>CMND</th>
                            <th>Ngày Lập</th>
                            <th>Tình Trạng</th>
                            <th>Tổng Tiền Phạt</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count() == 0)
                        {
                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                            </tr>
                        }
                        else
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td style="text-align:center">@stt</td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TenDocGia)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DiaChi)
                                    </td>
                                    <td>
                                        @String.Format("{0:dd/MM/yyyy}", item.NgaySinh)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SDT)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CMND)
                                    </td>
                                    <td>
                                        @String.Format("{0:dd/MM/yyyy}", item.NgayLap)
                                    </td>
                                    <td style="text-align:center">
                                        @Html.DisplayFor(modelItem => item.TinhTrang)
                                    </td>
                                    <td style="text-align:center">
                                        @Html.DisplayFor(modelItem => item.TongTienPhat)
                                    </td>
                                </tr>
                                stt++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


<div class="modal fade bs-example-modal-lg" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            @Html.Action("ThemDocGia", "DocGia")
        </div>
    </div>
</div>