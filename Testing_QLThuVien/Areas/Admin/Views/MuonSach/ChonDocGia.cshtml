@model IEnumerable<Testing_QLThuVien.Models.DocGia>

@{ 
    int stt = 1;
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">
        <span aria-hidden="true">×</span>
    </button>
    <h4 class="modal-title" id="myModalLabel">Danh Sách Độc Giả</h4>
</div>
<div class="modal-body">
    <div class="form-horizontal form-label-left" novalidate">
       
            <table id="mytable1" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th style="text-align:center">STT</th>
                        <th style="text-align:center">Tên Độc Giả</th>
                        <th style="text-align:center">Ngày Sinh</th>
                        <th style="text-align:center">CMND</th>
                        <th style="text-align:center">Chức Năng</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count() == 0)
                    {
                        <tr>
                            <td colspan="7" style="text-align:center">Không có dữ liệu.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td style="text-align:center">@stt</td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TenDocGia)
                                </td>
                                <td style="text-align:center">
                                    @String.Format("{0:dd/MM/yyyy}", item.NgaySinh)
                                </td>
                                <td style="text-align:center">
                                    @Html.DisplayFor(modelItem => item.CMND)
                                </td>
                                <td style="text-align:center">
                                    <input type="submit" class="btn btn-round btn-info btn-xs" value="Chọn" onclick="ChonDG('@Url.Action("ChonDG", "MuonSach", new { ma = item.IDDocGia, ten = item.IDDocGia + " - " + item.TenDocGia })')" />
                                </td>
                            </tr>
                            stt++;
                        }
                    }
                </tbody>
            </table>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
</div>


<script type="text/javascript">
        $(document).ready(function () {
            $('#mytable1').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.16/i18n/Vietnamese.json"
                }
            });
        });
</script>