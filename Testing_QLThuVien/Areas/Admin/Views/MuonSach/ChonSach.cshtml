@model IEnumerable<Testing_QLThuVien.Models.Sach>

@{
    int stt = 1;
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">
        <span aria-hidden="true">×</span>
    </button>
    <h4 class="modal-title" id="myModalLabel">Danh Sách Độc Giả</h4>
</div>
<div class="modal-body">
    <div class="form-horizontal form-label-left" novalidate">

        <table id="mytable1" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th style="font-weight:bold; text-align:center">STT</th>
                    <th style="text-align:center">
                        Tên Sách
                    </th>
                    <th style="text-align:center">
                        Thể Loại
                    </th>
                    <th style="text-align:center">
                        Tác Giả
                    </th>
                    <th style="text-align:center">
                        Năm Xuất Bản
                    </th>
                    <th style="text-align:center">Chức Năng</th>
                </tr>
            </thead>

            <tbody>
                @if (Model.Count() == 0)
                {
                    <tr>
                        <td colspan="9" style="text-align:center">Không có dữ liệu.</td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td style="text-align:center">@stt</td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TenSach)
                            </td>
                            <td style="text-align:center">
                                @Html.DisplayFor(modelItem => item.TheLoai.TenTheLoai)
                            </td>
                            <td style="text-align:center">
                                @Html.DisplayFor(modelItem => item.TacGia.TenTacGia)
                            </td>
                            <td style="text-align:center">
                                @Html.DisplayFor(modelItem => item.NamXuatBan)
                            </td>
                            <td style="text-align:center">
                                <input type="submit" class="btn btn-round btn-info btn-xs" value="Chọn" onclick="ChonDG('@Url.Action("ChonS", "MuonSach", new { ma = item.IDSach, ten = item.IDSach + " - " + item.TenSach })')" />
                            </td>
                        </tr>
                        stt++;
                    }
                }
            </tbody>
        </table>

    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
</div>


<script type="text/javascript">
        $(document).ready(function () {
            $('#mytable1').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.16/i18n/Vietnamese.json"
                }
            });
        });
</script>
