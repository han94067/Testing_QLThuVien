@model IEnumerable<Testing_QLThuVien.Models.CTMuonTra>

@{
    ViewBag.Title = "SachDaDat";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    int stt = 1;
}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">

            <div class="x_title">
                <h2>Danh Sách Sách Đã Được Đặt</h2>
                @*<div class="nav navbar-right panel_toolbox">
                        <input type="button" class="btn btn-primary" value="Thêm Sách" onclick="createModallg('@Url.Action("ThemSach", "QLSach")')" />
                    </div>*@
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <table id="mytable" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>
                                Tên Độc Giả
                            </th>
                            <th>
                                Tên Sách
                            </th>
                            <th>
                                Số Lượng
                            </th>
                            <th>
                                Ngày Mượn
                            </th>
                            <th>
                                Ngày Trả
                            </th>
                            <th>
                                Số Ngày Quá Hạn
                            </th>
                            <th>
                                Tổng Tiền
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count() == 0)
                        {
                            <tr>
                                <td colspan="9" style="text-align:center">Không có dữ liệu.</td>
                            </tr>
                        }
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="text-align:center">@stt</td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DocGia.TenDocGia)
                                </td>
                                <td style="text-align:center">
                                    @Html.DisplayFor(modelItem => item.Sach.TenSach)
                                </td>
                                <td style="text-align:center">
                                    @Html.DisplayFor(modelItem => item.SoLuongThue)
                                </td>
                                <td style="text-align:center">
                                    @String.Format("{0:dd/MM/yyyy}", item.NgayMuon)
                                </td>
                                <td style="text-align:center">
                                    @String.Format("{0:dd/MM/yyyy}", item.NgayTraThucTe)
                                </td>
                                <td style="text-align:center">
                                    @Html.DisplayFor(modelItem => item.NgayQuaHan)
                                </td>
                                <td style="text-align:center">
                                    @Html.DisplayFor(modelItem => item.TongTien)
                                </td>
                                <td style="text-align:center">


                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
