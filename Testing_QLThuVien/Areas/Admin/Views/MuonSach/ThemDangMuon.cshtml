@model Testing_QLThuVien.Models.CTMuonTra


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
            <span aria-hidden="true">×</span>
        </button>
        <h4 class="modal-title" id="myModalLabel">Thêm Sách Mới</h4>
    </div>
    <div class="modal-body">
        <div class="form-horizontal form-label-left" novalidate">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">
                    Tên Độc Giả<span class="required">*</span>
                </label>
                <div class="col-md-6 col-sm-6 col-xs-12">     
                    <input class="form-control" readonly value="@Session["TTDocGia"]" onclick="createModallg1('@Url.Action("ChonDocGia", "MuonSach")')" />
                </div>
            </div>


            <div class="form-group"> 
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">
                    Tên Sách<span class="required">*</span>
                </label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <input class="form-control" readonly value="@Session["TTSach"]" onclick="createModallg1('@Url.Action("ChonSach", "MuonSach")')" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">
                    Số Lượng Mượn<span class="required">*</span>
                </label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    @Html.EditorFor(model => model.SoLuongThue, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SoLuongThue, "", new { @class = "text-danger" })
                </div>
            </div>
            

        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
        <input type="submit" class="btn btn-primary" value="Thêm" />
    </div>
}



