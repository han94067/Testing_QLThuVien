@model IEnumerable<Testing_QLThuVien.Models.ChiTietPhieuNhapSach>

@{
    int stt = 1;
}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">

            <div class="x_title">
                <h2>Danh Sách Sách Đã Được Đặt</h2>
                <div class="nav navbar-right panel_toolbox">
                    <input type="button" class="btn btn-primary" value="Thêm Mượn" onclick="createModallg1('@Url.Action("ThemCTPhieuNhap", "NhapSach")')" />
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <table id="mytable" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th style="text-align:center">STT</th>
                            <th style="text-align:center">
                                Tên Sách
                            </th>
                            <th style="text-align:center">
                                Số Lượng
                            </th>
                            <th style="text-align:center">
                                Đơn Giá
                            </th>
                            <th style="text-align:center">
                                Chức Năng
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count() == 0)
                        {
                            <tr>
                                <td colspan="5" style="text-align:center">Không có dữ liệu.</td>
                            </tr>
                        }
                        else
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td style="text-align:center">@stt</td>
                                    <td style="text-align:center">
                                        @Html.DisplayFor(modelItem => item.Sach.TenSach)
                                    </td>
                                    <td style="text-align:center">
                                        @Html.DisplayFor(modelItem => item.SoLuong)
                                    </td>
                                    <td style="text-align:center">
                                        @Html.DisplayFor(modelItem => item.DonGia)
                                    </td>
                                    <td style="text-align:center"></td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>