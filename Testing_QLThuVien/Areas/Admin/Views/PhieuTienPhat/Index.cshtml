@model IEnumerable<Testing_QLThuVien.Models.PhieuThuTienPhat>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    int stt = 1;
}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">

            <div class="x_title">
                <h2>Danh Sách Phiếu Thu Tiền Phạt</h2>
                <div class="nav navbar-right panel_toolbox">
                    @*<input type="button" class="btn btn-primary" value="Thêm Đặt Sách" onclick="location.href='@Url.Action("ThemDatSach", "MuonSach")'" />*@
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <table id="mytable" class="table table-striped table-bordered">
                    <tr>
                        <th>STT</th>
                        <th>
                            Tên Độc Giả
                        </th>
                        <th>
                            Ngày Thu
                        </th>
                        <th>
                            Tiền Thu
                        </th>
                    </tr>
                    @if (Model.Count() == 0)
                    {
                        <tr>
                            <td colspan="4" style="text-align:center">Không có dữ liệu.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@stt</td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DocGia.TenDocGia)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NgayThang)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TienThu)
                            </td>
                        </tr>
                            stt++;
                        }
                    }
                </table>
            </div>
        </div>
    </div>
</div>

