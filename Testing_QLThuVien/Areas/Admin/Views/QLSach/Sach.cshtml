@model IEnumerable<Testing_QLThuVien.Models.Sach>

@{
    ViewBag.Title = "Sach";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    int stt = 1;
}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">

            <div class="x_title">
                <h2>Dữ Liệu Sách</h2>
                <div class="nav navbar-right panel_toolbox">
                    <input type="button" class="btn btn-primary" value="Thêm Sách" onclick="createModallg('@Url.Action("ThemSach", "QLSach")')" />
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <table id="mytable" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th style="font-weight:bold; text-align:center">STT</th>
                            <th style="text-align:center">
                                Tên Sách
                            </th>
                            @*<th>
                                Thể Loại
                            </th>
                            <th>
                                Tác Giả
                            </th>
                            <th>
                                Nhà Xuất Bản
                            </th>*@
                            <th style="text-align:center">
                                Hình Ảnh
                            </th>
                            <th style="text-align:center">
                                Năm Xuất Bản
                            </th>
                            <th style="text-align:center">
                                Số Lượng
                            </th>
                            <th style="text-align:center">
                                Số Lượng Tồn
                            </th>
                            <th style="text-align:center">
                                Trị Giá
                            </th>
                            <th style="text-align:center">
                                Tình Trạng
                            </th>
                            <th style="text-align:center">Chức Năng</th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (Model.Count() == 0)
                        {
                            <tr>
                                <td colspan="9" style="text-align:center">Không có dữ liệu.</td>
                            </tr>
                        }
                        else
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td style="text-align:center">@stt</td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TenSach)
                                    </td>
                                    @*<td>
                                        @Html.DisplayFor(modelItem => item.TheLoai.TenTheLoai)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TacGia.TenTacGia)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NhaXuatBan.TenNhaXuatBan)
                                    </td>*@
                                    <td>
                                        @Html.DisplayFor(modelItem => item.HinhAnh)
                                    </td>
                                    <td style="text-align:center">
                                        @Html.DisplayFor(modelItem => item.NamXuatBan)
                                    </td>
                                    <td style="text-align:center">
                                        @Html.DisplayFor(modelItem => item.SoLuong)
                                    </td>
                                    <td style="text-align:center">
                                        @Html.DisplayFor(modelItem => item.SoLuongTon)
                                    </td>
                                    <td style="text-align:center">
                                        @Html.DisplayFor(modelItem => item.TriGia)
                                    </td>
                                    <td style="text-align:center">
                                        @Html.DisplayFor(modelItem => item.TinhTrang)
                                    </td>
                                    <td style="text-align:center">        
                                        <input type="button" class="btn btn-round btn-info btn-xs" value="Thông Tin" onclick="createModallg('@Url.Action("Edit", "QLSach", new { ma = item.IDSach })')" />
                                    </td>
                                </tr>
                                stt++;
                            }
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>

<div class="modal fade bs-example-modal-lg" id="showModallg" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content" id="modelContentlg">
        </div>
    </div>
</div>

<div class="modal fade bs-example-modal-sm" id="showModalsm" tabindex="-1">
    <div class="modal-dialog modal-sm">
        <div class="modal-content" id="modelContentsm">
        </div>
    </div>
</div>

<script>
    function createModallg(url){
        $('#modelContentlg').load(url);
        $('#showModallg').modal('show');
    }
    function createModalsm(url) {
        $('#modelContentsm').load(url);
        $('#showModalsm').modal('show');
    }
</script>

