@model IEnumerable<Testing_QLThuVien.Models.Sach>

@{
    ViewBag.Title = "Sach";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    int stt = 1;
}


<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">

            <div class="x_title">
                <h2>Dữ Liệu Sách</h2>
                <div class="nav navbar-right panel_toolbox">
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target=".bs-example-modal-lg">Thêm Sách</button>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">

                <table id="mytable" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>
                                Tên Sách
                            </th>
                            <th>
                                Thể Loại
                            </th>
                            <th>
                                Tác Giả
                            </th>
                            <th>
                                Nhà Xuất Bản
                            </th>
                            <th>
                                Hình Ảnh
                            </th>
                            <th>
                                Năm Xuất Bản
                            </th>
                            <th>
                                Số Lượng
                            </th>
                            <th>
                                Số Lượng Tồn
                            </th>
                            <th>
                                Trị Giá
                            </th>
                            <th>
                                Tình Trạng
                            </th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (Model.Count() == 0)
                        {
                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                            </tr>
                        }
                        else
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td style="text-align:center">@stt</td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TenSach)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TheLoai.TenTheLoai)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TacGia.TenTacGia)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NhaXuatBan.TenNhaXuatBan)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.HinhAnh)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NamXuatBan)
                                    </td>
                                    <td style="text-align:center">
                                        @Html.DisplayFor(modelItem => item.SoLuong)
                                    </td>
                                    <td style="text-align:center">
                                        @Html.DisplayFor(modelItem => item.SoLuongTon)
                                    </td>
                                    <td style="text-align:center">
                                        @Html.DisplayFor(modelItem => item.TriGia)
                                    </td>
                                    <td style="text-align:center">
                                        @Html.DisplayFor(modelItem => item.TinhTrang)
                                    </td>
                                </tr>
                                stt++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade bs-example-modal-lg" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            @Html.Action("ThemSach", "QLSach")
        </div>
    </div>
</div>
