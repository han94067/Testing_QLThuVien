                    </li>*@
                </ul>

                <form class="navbar-form navbar-left" action="/User/TimKiem/KetQuaTimKiem" method="post">
                    <div class="input-group">
                        @using (Html.BeginForm("KetQuaTimKiem", "TimKiem", FormMethod.Post))
                        {

                            <div class="form-group input-group">
                                <input name="txtTimKiem" type="text" class="form-control" placeholder="Search..">
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="submit">
                                        <span class="glyphicon glyphicon-search"></span>
                                    </button>
                                </span>
                            </div>
                        }
                    </div>
                </form>

                <ul class="nav navbar-nav navbar-right">
                    <li>
                        @Html.Action("GioHangPartial", "GioHang")
                    </li>
                    @if (Session["TaiKhoan"] != null)
                    {
                        <li>
                            <a href="#"><span class="glyphicon glyphicon-user"></span></a>                          
                        </li>
                        <li>
                            @Html.ActionLink("Thoát", "Logout", "DocGias")
                        </li>
                    }
                    else
                    {
                        <li>
                            @Html.ActionLink("Đăng ký", "Create", "DocGias", null, htmlAttributes: new { @class = "DangKy" })
                        </li>
                        <li>
                            @Html.ActionLink("Đăng nhập", "DangNhap", "DocGias", null, htmlAttributes: new { @class = "DangNhap" })
                        </li>
                    }

                </ul>
            </div>
        </div>
    </nav>

