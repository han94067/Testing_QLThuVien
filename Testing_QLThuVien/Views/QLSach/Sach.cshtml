    <link href="~/Content/buttons.bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/fixedHeader.bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/responsive.bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/scroller.bootstrap.min.css" rel="stylesheet">


</head>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">

            <div class="x_title">
                <h2>Dữ Liệu Sách</h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">

                <table id="mytable" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>
                                Nhà Xuất Bản
